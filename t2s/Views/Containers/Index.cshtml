@model IEnumerable<t2s.Models.container>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Container</h2>

<p>
    @Html.ActionLink("Novo Container", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nmNumeroCntr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idTipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idCategoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nmNumeroCntr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idClienteContainer.nmCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idTipoContainer.nmStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idStatusContainer.nmStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idCategoriaContainer.nmStatus)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idContainer }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.idContainer })
        </td>
    </tr>
}

</table>
